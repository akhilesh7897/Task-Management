<% include ../partials/header.ejs %>

<div class="jumbotron">
  <div class="container header">
    <h2 style="text-align: center;">Edit News story</h2><br>
    <div style="max-width: 600px; margin: 0 auto">
      <form method="POST" action="/news/<%= newsitem._id %>/_method=PUT">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" required class="form-control" value="<%= newsitem.title %>">
        </div>
        <div class="form-group">
          <label for="story">Story</label>
          <textarea name="content" required class="form-control" rows="4"><%= newsitem.content %></textarea>
        </div>
        <div class="form-group">
          <label for="Date">Date</label>
          <input type="text" name="date" required class="form-control" value="<%= newsitem.date %>">
        </div>
        <button type="submit" class="btn btn-primary btn-large">Submit</button>
      </form>
    </div>
  </div>
</div>


