<% include ../partials/header.ejs %>


<div class="jumbotron">
  <div class="container header">
    <h2 style="text-align: center;">Edit <%= teamtask.taskname %></h2><br>
    <div style="max-width: 600px; margin: 0 auto">
      <form method="POST" action="/teamtasks/<%= teamtask._id %>?_method=PUT">
        <div class="form-group">
          <label for="Name of the task">Task</label>
          <input type="text" name="teamtask[taskname]" required class="form-control" value="<%= teamtask.taskname %>" placeholder="">
        </div>
        <div class="form-group">
          <label for="Description">Description</label>
          <textarea name="teamtask[des]" required class="form-control" rows="2" placeholder=""><%= teamtask.des %></textarea>
        </div>
        <div class="form-group">
          <label for="Deadline">Deadline</label>
          <input type="text" name="teamtask[deadline]" required class="form-control" value="<%= teamtask.deadline %>" placeholder="">
        </div>
        <button type="submit" class="btn btn-primary btn-large">Update</button>
      </form>
    </div>
  </div>
</div>


<% include ../partials/footer.ejs %>