<% include ../partials/header.ejs %>

<div class="jumbotron">
  <div class="container header">
    <h2 style="text-align: center;">Join</h2><br>
    <div style="width: 70%; margin: 0 auto">
      <form method="POST" action="/event/:id/members">
        <div class="form-group">
          <label for="role">Role</label>
          <input type="text" name="role" required class="form-control" placeholder="How do you want to join?">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea name="des" required class="form-control" rows="2" placeholder="Describe how you want to contribute"></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-large">Submit</button>
      </form>
    </div>
  </div>
</div>


